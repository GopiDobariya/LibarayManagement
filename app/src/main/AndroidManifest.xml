<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aartilakkad.libaraymanagement">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".libaray.Activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".libaray.Activity.Login.LoginActivity" />
        <activity android:name=".libaray.Activity.Login.RegistrationActivity" />
        <activity android:name=".libaray.Activity.Login.FeedbackActivity" />
        <activity
            android:name=".libaray.Activity.Login.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".libaray.Activity.Book.AddBook" />
        <activity android:name=".libaray.Activity.Book.IssueBookActivity" />
        <activity android:name=".libaray.Activity.Book.ReturnBookActivity"></activity>
    </application>

</manifest>